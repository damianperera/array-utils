{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES2020",
        "noImplicitAny": true,
        "typeRoots": ["node_modules/@types"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["ES2019", "ES2020"],
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
    },
    "exclude": [
        "lib",
        "node_modules",
    ],
    "include": [
        "src"
    ]
}